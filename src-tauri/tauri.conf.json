{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CopyGum",
  "version": "1.0.0",
  "identifier": "com.copygum.clipboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "CopyGum",
        "width": 1440,
        "height": 400,
        "minWidth": 1024,
        "minHeight": 400,
        "maxHeight": 400,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "transparent": true,
        "focus": true,
        "center": false,
        "y": 0,
        "x": 0
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data:; font-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*",
          "$APPDATA/**/*",
          "$LOCALAPPDATA/**/*",
          "$HOME/**/*",
          "C:/**/*",
          "D:/**/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Modern clipboard manager",
    "longDescription": "CopyGum is a powerful clipboard manager that helps you organize and access your clipboard history with a beautiful overlay interface. Features include smart content detection, categories, tags, and global keyboard shortcuts.",
    "copyright": "Copyright 2024 CopyGum",
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "nsis": {
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "Entitlements.plist",
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "infoPlist": "Info.plist"
    }
  },
  "plugins": {}
}
